<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.gshp.apicontroller"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="28" />

    <application
        android:name="net.gshp.com.antonio.apicontroller.app.APP"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.gshp.com.antonio.apicontroller.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="net.gshp.apicontroller.ServiceEncuesta"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name="net.gshp.com.antonio.apicontroller.ListTipoEncuestas"
            android:label="@string/title_activity_list_tipo_encuestas"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="net.gshp.com.antonio.apicontroller.ListEncuestas"
            android:label="@string/title_activity_list_encuestas"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="net.gshp.com.antonio.apicontroller.Encuesta"
            android:label="@string/title_activity_encuesta"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="adjustPan" >
        </activity>
    </application>

</manifest>